<h1><%= @question.title %></h1>

<p><%= @question.body  %></p>

<p><%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Delete", @question, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-success' %>
</p>

<p>Resolved<br/> <%= @question.resolved ? 'Yes' : 'No' %></p>
